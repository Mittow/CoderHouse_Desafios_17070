html
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title= 'PUG'
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' type='text/css' media='screen' href='main.css')
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
body(class="p-4")
    div(class="container col-md-6 p-3 mb-2 bg-light text-dark rounded")
        h2(class="text-center")= 'Vista de Productos'
        div(class="p-2")    
            table(class="table table-dark")
              thead
                tr(class="text-center")
                  th(scope="col")= 'Nombre'
                  th(scope="col")= 'Precio'
                  th(scope="col")= 'Foto'
              tbody
                each d in data 
                  tr(class="text-center")
                    td= d.title
                    td= d.price
                    td
                      img(width="36" height="36" src=d.thumbnail) 
                else 
                  p(class="text-center")= 'No hay productos!!!'
        div(class="col text-center")
            a(href="http://localhost:8080/")
                input(type="button" value="Registrar nuevo producto" class="btn btn-primary btn-lg btn-block") 


