<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>EJS</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="p-4">
    <div class="container col-md-6 p-3 mb-2 bg-light text-dark rounded">
        <h2 class="text-center">Vista de Productos</h2>
        <div class="p-2">
            <table class="table table-dark">
                <thead>
                  <tr class="text-center">
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach(function (d) { %>
                    <tr class="text-center">
                      <td><%= d.title %></td>
                      <td><%= d.price %></td>
                      <td><img width="36" height="36" src=<%=d.thumbnail%>></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
              <%if (data.length == 0) { %>
                <p class="text-center">No hay productos!!!</p>
              <% } %>
        </div>
        <div class="col text-center">
            <a href="http://localhost:8080/">
                <input type="button" value="Registrar nuevo producto" class="btn btn-primary btn-lg btn-block"> 
            </a>
        </div>
    </div>
</body>
</html>